{
  "extends": ["standard", "airbnb-base", "atomic"],
  "ignorePatterns": ["dist/", "node_modules/"],
  "rules": {
    "arrow-body-style": ["error", "always"],
    "curly": ["error", "all"],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "caseSensitive": true,
        "commonjs": true,
        "ignore": ["atom"]
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
